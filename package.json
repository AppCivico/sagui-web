{
  "name": "sagui-web",
  "version": "0.1.0",
  "description": "Site Sagui developed by AppCivico",
  "main": "index.html",
  "scripts": {
    "autoprefixer": "postcss --use autoprefixer -r static/dist/css/**/*.css",
    "nano": "postcss --use cssnano --safe -r static/dist/css/**/*.css",
    "icons": "imagemin _source/images/**/*.svg --out-dir=static/dist/img",
    "cachebust": "npm-run-all cachebust:img cachebust:cssAndJs",
    "cachebust:cssAndJs": "hashmark -l 8 dist/**/*.{js,css} {dir}/{name}-{hash}{ext} --cwd static | replaceinfiles -s \"layouts/**/*.html\" -d \"{dir}/{base}\"",
    "cachebust:img": "hashmark -l 8 dist/**/*.{gif,jpg,png,svg} {dir}/{name}-{hash}{ext} --cwd static | replaceinfiles -s \"{content,data,layouts,static}/**/*.{md,html,css}\" -d \"{dir}/{base}\"",
    "clean": "rimraf ./static/dist/**/*.{css,img,js,json,png,gif,jpg,map}",
    "compile:sass": "node-sass _source/stylesheets --output-style compressed --output static/dist/css --source-map true",
    "compress:img": "imagemin _source/images/**/*.{gif,jpg,png} --out-dir=static/dist/img",
    "uglify": "uglifyjs static/dist/js/index.js -c -r -o static/dist/js/index.js",
    "build:sass": "npm-run-all compile:sass autoprefixer nano",
    "build:img": "npm-run-all compress:img icons",
    "prebuild": "npm-run-all --parallel lint clean",
    "build": "npm-run-all --parallel build:sass build:img",
    "build:dev": "npm run build",
    "build:prod": "npm-run-all build cachebust",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "npm run lint:sass",
    "lint:sass": "sass-lint \"./_source/stylesheets/**/*.scss\" --verbose --no-exit --format junit --output ./_testReports/sassLint.xml",
    "pretest": "npm run lint",
    "watch:img": "onchange \"./_source/images/**/*.{gif,jpg,png,svg}\" -- npm run build:img",
    "watch:sass": "onchange \"_source/stylesheets/**/*.scss\" -- npm run build:sass",
    "watch": "npm-run-all --parallel watch:*",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sobral@bitbucket.org/eokoe_it/front_end_boiler_plate.git"
  },
  "keywords": [
    "html",
    "hugo",
    "npm",
    "sass"
  ],
  "author": "Evelyn Perez, Lais Tomaz & Fernanda Joris",
  "license": "ISC",
  "homepage": "https://bitbucket.org/eokoe_it/front_end_boiler_plate#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "changelog-verify": "^1.0.4",
    "cssnano": "^3.10.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^3.0.0",
    "include-media": "^1.4.9",
    "modularscale-sass": "^3.0.3",
    "node-sass": "^4.6.0",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.1",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "susy": "^3.0.1",
    "svgo": "^1.0.2",
    "uglify-js": "^3.1.8",
    "version-changelog": "^2.1.0"
  }
}
